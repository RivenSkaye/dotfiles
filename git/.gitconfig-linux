# This is Git's per-user configuration file.
[core]
    editor = vim
    visual = code
    hooksPath = "~/utils/git_hooks"
    autocrlf = false
    eol = lf

[user]
[include]
    path = ~/.defaultgitcfg

[commit]
    gpgsign = true

[credential]
    helper = /usr/share/git-credential-manager-core/git-credential-manager-core
    provider = generic
    guiPrompt = false
    credentialStore = gpg
    helper = /usr/sbin/git-credential-manager

[diff]
    submodule = log

[pull]
    rebase = true
